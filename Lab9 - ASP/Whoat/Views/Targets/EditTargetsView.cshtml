
@{
    ViewBag.Title = "EditDestinationsView";
}
<!DOCTYPE html>
<head>
    <title>Edit data</title>
    <script src="~/Scripts/jquery-3.3.1.js"></script>
    <script src="~/Scripts/setupTargetsPage.js"></script>
    <link rel="stylesheet" href="~/Content/editPages.css">
</head>
<body>
    <br />
    @using (Html.BeginForm("Index", "Main", FormMethod.Get))
    {
        <input type="submit" value="<< Return">
    }
    <form>
        <fieldset>
            <legend>Target fields:</legend>
            <table id="fields">
                <tr>
                    <th>Target ID:</th>
                    <td><input type="text" id="TargetID"></td>
                </tr>
                <tr>
                    <th>Name:</th>
                    <td><input type="text" id="Name"></td>
                </tr>
                <tr>
                    <th>Description:</th>
                    <td><input type="text" id="Description"></td>
                </tr>
                <tr>
                    <th>Price:</th>
                    <td><input type="text" id="Price"></td>
                </tr>
                <tr>
                    <th>Destination ID:</th>
                    <td><input type="text" id="DestinationID"></td>
                </tr>
            </table>
            <table id="operations">
                <tr>
                    <td>Show all targets:</td>
                    <td><input class="b" type="button" id="showAll" value="Show"></td>
                </tr>
                <tr>
                    <td>Show target with given ID:</td>
                    <td><input class="b" type="button" id="showWithID" value="Show"></td>
                </tr>
                <tr>
                    <td>Insert target:</td>
                    <td><input class="b" type="button" id="insert" value="Insert"></td>
                </tr>
                <tr>
                    <td>Remove target with given ID:</td>
                    <td><input class="b" type="button" id="delete" value="Remove"></td>
                </tr>
                <tr>
                    <td>Update target:</td>
                    <td><input class="b" type="button" id="update" value="Update"></td>
                </tr>
            </table>
        </fieldset>
    </form>
    <div id="resultsDiv">
    </div>

</body>